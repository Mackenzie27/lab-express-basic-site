<h2>Add New Hot Sauces</h2>

<form method="post" action="/hot-sauces/edit/{{hot-sauces._id}}" class="form">
    <label for="hsName">Name</label>
    <input class="input" type="text" id="name" name="name" value="{{hot-sauces.hsname}}"><br>
    <label for="spiceRating">Spice Rating</label>
    <select class="input" name="flavorRating" id="flavorRating">
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
        <option value="5">5</option>
    </select><br>
    <label for="flavorRating">Flavor Rating</label>
    <select class="input" name="flavorRating" id="flavorRating">
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
        <option value="5">5</option>
    </select><br>
    <label for="comments">Comments</label>
    <input class="comment-field" type="text" id="name" name="comments" value="{{hot-sauces.comments}}"><br><br>
    <button class="form-button">Update</button>
</form>